{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "TopoJSON Geometry Object",
  "$ref": "topojson.json",
  "type": "object",
  "properties": {
    "id": {
      "type": ["number", "string"]
    },
    "properties": {
      "type": ["object", "null"]
    }
  },
  "oneOf": [
    {
      "title": "TopoJSON Point",
      "required": [
        "coordinates"
      ],
      "properties": {
        "type": {
          "const": "Point"
        },
        "coordinates": {
          "$ref": "position.json"
        }
      }
    },
    {
      "title": "TopoJSON MultiPoint",
      "required": [
        "coordinates"
      ],
      "properties": {
        "type": {
          "const": "MultiPoint"
        },
        "coordinates": {
          "type": "array",
          "items": {
            "$ref": "position.json"
          }
        }
      }
    },
    {
      "title": "TopoJSON LineString",
      "required": [
        "arcs"
      ],
      "properties": {
        "type": {
          "const": "LineString"
        },
        "arcs": {
          "$ref": "#/definitions/arc_indexes"
        }
      }
    },
    {
      "title": "TopoJSON MultiLineString",
      "required": [
        "arcs"
      ],
      "properties": {
        "type": {
          "const": "MultiLineString"
        },
        "arcs": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/arc_indexes"
          }
        }
      }
    },
    {
      "title": "TopoJSON Polygon",
      "required": [
        "arcs"
      ],
      "properties": {
        "type": {
          "const": "Polygon"
        },
        "arcs": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/arc_indexes"
          }
        }
      }
    },
    {
      "title": "TopoJSON MultiPolygon",
      "required": [
        "arcs"
      ],
      "properties": {
        "type": {
          "const": "MultiPolygon"
        },
        "arcs": {
          "type": "array",
          "items": {
            "type": "array",
            "items": {
              "$ref": "#/definitions/arc_indexes"
            }
          }
        }
      }
    },
    {
      "title": "TopoJSON GeometryCollection",
      "required": [
        "geometries"
      ],
      "properties": {
        "type": {
          "const": "GeometryCollection"
        },
        "geometries": {
          "type": "array",
          "items": {
            "$ref": "#"
          }
        }
      }
    }
  ],
  "definitions": {
    "arc_indexes": {
      "type": "array",
      "items": {
        "type": "integer"
      }
    }
  }
}
