{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "TopoJSON Topology Object",
  "type": "object",
  "required": [
    "type",
    "objects",
    "arcs"
  ],
  "properties": {
    "type": {
      "const": "Topology"
    },
    "objects": {
      "$ref": "#/definitions/objects"
    },
    "arcs": {
      "$ref": "#/definitions/arcs"
    },
    "transform": {
      "$ref": "#/definitions/transform"
    },
    "bbox": {
      "$ref": "bbox.json"
    }
  },
  "definitions": {
    "transform": {
      "type": "object",
      "required": [
        "scale",
        "translate"
      ],
      "properties": {
        "scale": {
          "type": "array",
          "items": {
            "type": "number"
          },
          "minItems": 2,
          "maxItems": 2
        },
        "translate": {
          "type": "array",
          "items": {
            "type": "number"
          },
          "minItems": 2,
          "maxItems": 2
        }
      }
    },
    "arcs": {
      "type": "array",
      "items": {
        "type": "array",
        "items": {
          "$ref": "position.json"
        },
        "minItems": 2
      }
    },
    "objects": {
      "type": "object",
      "additionalProperties": {
        "$ref": "geometry.json"
      }
    }
  }
}
